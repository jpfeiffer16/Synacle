#include "../lib/stdlib.bc"
#include "../lib/testlib.bc"

category("str_len tests", () => {
    var result = 0;
    before_each(() => { result = str_len("123"); });

    test("string length should be 3", () => {
        assert(is(result)->equal_to(3));
    });
});

category("str_equal tests", () => {
    test("string should be equal" () => {
        //TODO : The issue here is something to do with the string literal.
        // str_equal("123", "123"); does not work for some reason
        var a = "123";
        var b = "123";
        var positive = str_equal(a, b);
        // positive;
        // breakpoint;
        print_number(positive);
        println(" ");
        assert(is(positive)->equal_to(1));
    });

    test("string not should be equal" () => {
        var negative = str_equal("23", "123");
        assert(is(negative)->equal_to(0));
    });
});
