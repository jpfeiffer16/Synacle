#include "lib/stdlib.bc";

function main() {
  print("Enter your name or 'exit' to stop: ");
  string name = input();
  if (str_equal(name, "exit")) {
    return;
  }
  ptr first_letter = alloc();
  wmem(first_letter, ~name as int);
  ++name;
  println(
    str_cat(
      str_cat(name, first_letter as string),
      "ay"
    )
  );
  main();
}

main();
