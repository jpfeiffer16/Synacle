{
    "name": "bclang",
    "displayName": "bclang",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.44.0"
    },
    "activationEvents": [
        "onLanguage:bclang"
    ],
    "main": "./client/out/extension",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "bclang",
                "aliases": [
                    "",
                    "bclang"
                ],
                "extensions": [
                    ".bc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bclang",
                "scopeName": "source.bclang",
                "path": "./syntaxes/bclang.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "mocha": "^6.2.2",
        "@types/node": "^12.12.0",
        "eslint": "^6.4.0",
        "@typescript-eslint/parser": "^2.3.0",
        "typescript": "^3.8.3"
    }
}
